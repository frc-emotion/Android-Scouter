<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team2658.scouter.MainActivity">

    <ScrollView xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.team2658.scouter.MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="?android:dividerHorizontal"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">


                    <EditText
                        android:id="@+id/editTeamNumber"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/editTeam"
                        android:inputType="number"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/viewStart"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="monospace"
                        android:text="@string/viewStart"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerStart"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:entries="@array/start_options"
                        android:fontFamily="monospace"
                        android:prompt="@string/start_hint"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_mech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">


                    <EditText
                        android:id="@+id/mechHatch"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/mech_hatch"
                        android:inputType="textNoSuggestions"
                        android:textAlignment="textStart" />

                    <EditText
                        android:id="@+id/mechCargo"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/mech_cargo"
                        android:inputType="textNoSuggestions"
                        android:textAlignment="textStart" />

                    <EditText
                        android:id="@+id/mechLift"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/mech_lift"
                        android:inputType="textNoSuggestions"
                        android:textAlignment="textStart" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_teleop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/viewTeleop"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="monospace"
                        android:text="@string/viewTeleop"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hatchPreGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/gamePreHatch"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/decHatchPre"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/integer_number_hatch_pre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="0"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/incHatchPre"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="+" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cargoPreGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/gamePreCargo"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/decCargoPre"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/integer_number_cargo_pre"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="0"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/incCargoPre"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="+" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/hatchPostGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/gamePostHatch"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/decHatchPost"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/integer_number_hatch_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="0"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/incHatchPost"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="+" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="end"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/cargoPostGame"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="15dp"
                            android:text="@string/gamePostCargo"
                            android:textSize="14sp" />

                        <Button
                            android:id="@+id/decCargoPost"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="-" />

                        <TextView
                            android:id="@+id/integer_number_cargo_post"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="0"
                            android:textSize="18sp" />

                        <Button
                            android:id="@+id/incCargoPost"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="+" />

                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_climb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/viewClimb"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="monospace"
                        android:text="@string/viewClimb"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinnerClimb"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:entries="@array/climb_options"
                        android:fontFamily="monospace"
                        android:prompt="@string/climb_hint"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textSize="18sp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_notes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="?android:dividerHorizontal"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <TextView
                        android:id="@+id/viewNotes"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="monospace"
                        android:text="@string/viewNotes"
                        android:textAlignment="center"
                        android:textAllCaps="false"
                        android:textAppearance="@android:style/TextAppearance.Material.Medium"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/editNotes"
                        android:layout_width="300dp"
                        android:layout_height="35dp"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="15dp"
                        android:background="@android:color/transparent"
                        android:ems="10"
                        android:hint="@string/editNotes"
                        android:inputType="textNoSuggestions"
                        android:textAlignment="textStart"
                        android:visibility="visible" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view_buttons2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:elevation="100dp"
                card_view:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/card_view_buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_submit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:onClick="submitData"
                            android:text="@string/submit" />

                        <Button
                            android:id="@+id/button_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:onClick="clearData"
                            android:text="@string/clear" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/button_export"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="15dp"
                            android:onClick="exportExcel"
                            android:text="@string/export" />

                        <Button
                            android:id="@+id/button_clearCsv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:onClick="clearFile"
                            android:text="@string/clearFile"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
